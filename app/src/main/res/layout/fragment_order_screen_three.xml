<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_brown"
    tools:context=".fragments.OrderScreenThree">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_brown">

    <Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/dark_brown"
        android:elevation="4dp"
        android:title="@string/summary"
        android:titleTextColor="@color/primary_white"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
        app:srcCompat="@drawable/logo_coffee" />

    <TextView
        android:id="@+id/coffee_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:text="@string/store_name"
        android:textAlignment="center"
        android:textColor="@color/dark_brown"
        android:textSize="@dimen/main_title"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/coffee_title">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="@string/enter_pickup_info"
                android:textColor="@color/dark_brown"
                android:textSize="@dimen/main_subtitle"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/coffee_title" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:text="@string/full_name"
                android:textColor="@color/dark_brown"
                android:textSize="@dimen/label_title_medium"
                android:textStyle="bold|italic"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:layout_editor_absoluteX="20dp" />

            <TextView
                android:id="@+id/fullNameValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:text="@string/full_name"
                android:textColor="@color/medium_brown"
                android:textSize="@dimen/label_title_medium"
                android:textStyle="bold|italic"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:layout_editor_absoluteX="20dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:text="@string/phone_number"
                android:textColor="@color/dark_brown"
                android:textSize="@dimen/label_title_medium"
                android:textStyle="bold|italic"
                app:layout_constraintTop_toBottomOf="@+id/fullNameValue"
                tools:layout_editor_absoluteX="20dp" />

            <TextView
                android:id="@+id/phoneNumberValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:text="@string/phone_number"
                android:textColor="@color/medium_brown"
                android:textSize="@dimen/label_title_medium"
                android:textStyle="bold|italic"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                tools:layout_editor_absoluteX="20dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:text="@string/pickup_time"
                android:textColor="@color/dark_brown"
                android:textSize="@dimen/label_title_medium"
                android:textStyle="bold|italic"
                app:layout_constraintTop_toBottomOf="@+id/phoneNumberValue"
                tools:layout_editor_absoluteX="20dp" />

            <TextView
                android:id="@+id/pickUpTimeValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:text="@string/pickup_time"
                android:textColor="@color/medium_brown"
                android:textSize="@dimen/label_title_medium"
                android:textStyle="bold|italic"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                tools:layout_editor_absoluteX="20dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:text="@string/order"
                android:textColor="@color/dark_brown"
                android:textSize="@dimen/label_title_medium"
                android:textStyle="bold|italic"
                app:layout_constraintTop_toBottomOf="@+id/pickUpTimeValue"
                tools:layout_editor_absoluteX="20dp" />

            <TextView
                android:id="@+id/orderValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:text=""
                android:textColor="@color/medium_brown"
                android:textSize="@dimen/label_title_medium"
                android:textStyle="bold|italic"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                tools:layout_editor_absoluteX="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="50dp"

                android:textColor="@color/medium_brown"
                android:textSize="@dimen/label_title_medium"
                android:textStyle="bold|italic"
                app:layout_constraintTop_toBottomOf="@+id/orderValue"
                tools:layout_editor_absoluteX="20dp" />

        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>